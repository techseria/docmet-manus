# Database Configuration
# For development, SQLite is used by default
DATABASE_URI=file:./payload.db

# For production, use PostgreSQL
# DATABASE_URI=postgresql://username:password@localhost:5432/docmet

# Payload CMS Configuration
PAYLOAD_SECRET=your-super-secret-key-here-change-this-in-production

# Next.js Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Cron and Preview Secrets
CRON_SECRET=your-cron-secret-here
PREVIEW_SECRET=your-preview-secret-here

# Production Configuration (uncomment for production)
# NODE_ENV=production
# SITE_URL=https://your-domain.com

# Optional: Email Configuration (for contact forms)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Cloud Storage (for production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-s3-bucket

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Optional: Error Tracking
# SENTRY_DSN=your-sentry-dsn
